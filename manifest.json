{
  "manifest_version": 2,
  "name": "Reenable - Website Blocker",
  "description": "Bad conscience can't make you quit wasting your time on social media, but money can.",
  "short_name": "Reenable",
  "version": "0.0.5",
  "icons": {
    "128": "images/iconR.png"
  },
  "browser_action": {
    "default_icon": "images/iconR.png",
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "jquery.js",
      "background.js",
      "bundle.js"
    ]
  },
  "permissions": [
    "<all_urls>",
    "declarativeContent",
    "storage",
    "tabs",
    "unlimitedStorage",
    "webRequest",
    "webRequestBlocking",
    "webNavigation"
  ],
  "author": "Reenable"
}